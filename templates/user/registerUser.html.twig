{% extends "base.html.twig" %}
{% block title %}User registration{% endblock %}
{% block content %}
<h1 class="headlines">Присоединяйся к нам!</h1>
<form class="input-form" action="/register" method="post" enctype="multipart/form-data">
    <div class="user-info">
        <label class="input-label" for="first_name">Имя:</label>
        <input class="input-data" name="first_name" id="first_name" type="text">
    </div>
    <div class="user-info">
        <label class="input-label" for="last_name">Фамилия:</label>
        <input class="input-data" name="last_name" id="last_name" type="text">
    </div>
    <div class="user-info">
        <label class="input-label" for="email">Почта:</label>
        <input class="input-data" name="email" id="email" type="text">
    </div>
    <div class="user-info">
        <label class="input-label" for="phone">Телефон:</label>
        <input class="input-data" name="phone" id="phone" type="text">
    </div>
    <div class="user-info">
        <label class="input-label" for="role">Role: </label>
        <input class="input-data" name="role" id="role" type="text">
    </div>
    <div class="user-info">
        <label class="input-label" for="avatar_path">Аватарка: </label>
        <input class="input-data" name="avatar_path" id="avatar_path" type="file" accept="image/png, image/jpeg, image/gif">
    </div>
    <div>
        <label for="password" class="input-label">Пароль: </label>
        <input type="password" name="password" id="password" class="input-label" autocomplete="current-password" required>
    </div>
    <button class="button" type="submit">Зарегистрироваться</button>
</form>
{% endblock %}