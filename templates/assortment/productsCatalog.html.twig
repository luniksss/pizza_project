{% extends "base.html.twig" %}
{% block title %}Catalog{% endblock %}
{% block content %}
<div class="flex-container">
    <h1 class="headlines">Пользователь видит:</h1> 
    <div class="wrapper">
        <button class="button small" onclick="redirectToPage()">Добавить новое</button> 
        <a href="{{ path('view_user') }}">
            <button id="button-profile" type="button" class="button small">Профиль</button>  
        </a>
    </div>
    <script>
        function redirectToPage() {
            window.location.href = "/admin/add";
        }
    </script>
</div> 
<div class="cards">
    {% for product in product_list %}
        {% include "assortment/productCardEdit.html.twig" with product %}
    {% endfor %}
</div>    
{% endblock %}